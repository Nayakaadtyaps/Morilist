<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".fragments.ProductivityFragment"> <!-- Menambahkan ini untuk memusatkan konten -->

    <ImageView
        android:id="@+id/notfound"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/kudanotfound"
        android:layout_gravity="center"/> <!-- Memastikan gambar di tengah -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="404"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_gravity="center"/> <!-- Memastikan teks di tengah -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fitur ini masih dalam tahap pengembangan"
        android:layout_gravity="center"/> <!-- Memastikan teks di tengah -->

</LinearLayout>
